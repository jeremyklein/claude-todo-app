# MCP HTTP Server Configuration

# Server settings
MCP_HOST=0.0.0.0
MCP_PORT=8080

# Authentication
# IMPORTANT: Change this token in production!
MCP_AUTH_TOKEN=mcp-secret-token-change-me-in-production

# Django user to use for MCP operations (default user for default token)
MCP_USER=admin

# Multi-user support: Map tokens to specific users
# Format: token1:username1,token2:username2,token3:username3
# Each user will only see their own tasks when using their token
# Example:
# MCP_TOKEN_USER_MAPPING=alice-token-123:alice,bob-token-456:bob,charlie-token-789:charlie
MCP_TOKEN_USER_MAPPING=

# Django settings
DJANGO_SETTINGS_MODULE=todo_project.settings

# MCP HTTP Server Production Environment Variables
# Copy this to /var/www/todo-app/.env.mcp.production and update values

# Server settings
MCP_HOST=127.0.0.1
MCP_PORT=8080

# Authentication - CHANGE THESE!
# Generate with: openssl rand -hex 32
MCP_AUTH_TOKEN=CHANGE_THIS_TO_SECURE_RANDOM_TOKEN

# Multi-user support (optional)
# Format: token1:username1,token2:username2
# Generate tokens with: openssl rand -hex 32
MCP_TOKEN_USER_MAPPING=

# Django user to use for default MCP operations
MCP_USER=admin

# Django settings
DJANGO_SETTINGS_MODULE=todo_project.settings

# Database (should match Django settings)
DB_NAME=todo_production
DB_USER=todoapp
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_HOST=localhost
DB_PORT=5432

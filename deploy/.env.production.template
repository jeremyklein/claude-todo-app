# Django Production Environment Variables
# Copy this to /var/www/todo-app/.env.production and update values

# Django Settings
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_50_CHARS_MIN
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-droplet-ip

# Database
DATABASE_URL=postgresql://todoapp:CHANGE_THIS_PASSWORD@localhost:5432/todo_production

# Or individual settings:
DB_NAME=todo_production
DB_USER=todoapp
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Static files
STATIC_ROOT=/var/www/todo-app/staticfiles
MEDIA_ROOT=/var/www/todo-app/media

# Email (optional - for password resets, etc.)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
